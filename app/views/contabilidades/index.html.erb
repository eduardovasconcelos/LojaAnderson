<% if session_user.admin? %>
    <h1>CONTABILIDADE</h1>
  <div id="tabelas">
    <table border="1" cellpadding="5" cellspacing="1">
      <tr>
        <th>Descricao</th>
        <th>Tipo</th>
        <th>Valor</th>
        <th>Ações</th>
      </tr>

    <% @contabilidades.each do |contabilidade| %>
      <tr>
        <td><%=h contabilidade.descricao %></td>
        <td><%=h contabilidade.tipo %></td>
        <td><%=h contabilidade.valor %></td>
        <td><%= link_to 'Editar', edit_contabilidade_path(contabilidade) %>
        <%= link_to 'Deletar', contabilidade, :confirm => 'Você tem certeza?', :method => :delete %></td>
      </tr>
    <% end %>
    </table>

    <br />
    </div>
    <p id="menu_new">
      <%= link_to image_tag("novo_valor_b1.gif"), new_contabilidade_path %>
    </p>
  
<% else %>
    <%= render :partial => "shared/access_denied" %>
<% end %>