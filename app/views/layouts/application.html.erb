<html>
  <head>
    <title>Aplicação de loja</title>
    <%= stylesheet_link_tag "scaffold" %>
    <%= javascript_include_tag :defaults %>
    
  </head>

  <body bgcolor="#0985A1">
    
    <span id="menu">

      <%= link_to image_tag("links_b1.gif"), clientes_path %>
      <%= link_to image_tag("links_b2.gif"), pedidos_path %>
      <%= link_to image_tag("links_b3.gif"), produtos_path %>
      <% if session_user %>
            <% if session_user.admin? %>
                <%= link_to image_tag("links_b4.gif"), contabilidades_path%>
                <%= link_to image_tag("links_b5.gif"), users_path%>
            <% end %>
      <% end %>
      <%= link_to image_tag("links_b6.gif"), :controller => "login", :action => "login"%>
      <%= link_to image_tag("links_b7.gif"), :controller => "login", :action => "logout"%>
    </span>
    
    <div id="content" >
      <p id="login-information" style="font-family: Arial; font-size: 13px">
        <% if session_user %>
        => Você está logado como <strong style="color:red"><%= session_user.login %></strong> <=
	<% end %>
    </p>
      <%= yield %>
    </div>
    
    <div id="footer" align="center">
    <b>Criado por:<br> Eduardo de Oliveira Vasconcelos</b>
    </div>
   </body>
</html>